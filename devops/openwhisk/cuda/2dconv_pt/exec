# parse action param
#TASK_ID=$(jq -r '(.TASK_ID)')

# command to exec.exe via named pipe "fifo.1"
chmod +x exec.exe

if [ -p fifo.1 ]
then
#	cat > /init/fifo.1 &
	echo "1" > fifo.1 ;
else
	echo "{\"err\": \"no named pipe\"}"
	exit 0
fi

# wait for output
while [ true ]
do
	if [ -s output ]
	then
		cat output;
		echo -n "" > output;
		break;
	fi
done

exit 0;

